<% provide(:title, 'Add new  advertisement') %>
<div class="content-show">
<h1>Add new advertisement</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for @advertisement, html: { multipart: true, role: "form" } do |f| %>
		 <%= render 'shared/error_messages', object: f.object %>
		 <div class="form-group">
		 <%= f.label :typec %>
		 <%= f.select :typec, ['Buy', 'Sell'], {:selected=> 'Buy'}, :include_blank => false, class: "form-control"  %>
		 </div>
		  <div class="form-group">
		 <%= f.label :currency %>
		 <%= f.select :currency, ['USD', 'EUR', 'RUB'], {:selected=> 'USD'}, :include_blank => false, class: "form-control"  %>
		 </div>
		 <div class="form-group">
		 <%= f.label :course %>
		 <%= f.text_field :course, class: "form-control" , :placeholder => "25.00"%>
		 </div>
		 <div class="form-group">
		 <%= f.label :sum %>
		 <%= f.text_field :sum, class: "form-control", :placeholder => "100" %>
		 </div>
		 <div class="form-group">
		 <%= f.label :region %>
		 <%= f.select :region, ['Kiev', 'Dnepropetrovsk', 'Donetsk', 'Zaporozhye', 'Lviv', 'Kharkiv'], {:selected=> 'Kiev'}, :include_blank => false, class: "form-control"  %>
		 </div>
		 <div class="form-group">
		 <%= f.label :tel %>
		 <%= f.text_field :tel, class: "form-control", :placeholder => "(095) 256 87 23" %>
		 </div>
		<div class="actions form-group">
		<%= f.submit "Create", class: "btn   btn-primary" %>
		</div>
    <% end %>
  </div>
  </div>
</div>